<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h3><%= pluralize(@user.errors.count, "erreur") %> 
        ont empêché d'enregistrer votre inscription !</h3>
    <p>Merci de corriger ces champs :</p>
    <ul id="errors">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>