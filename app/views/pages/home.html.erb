<div class="jumbotron">
	<% if signed_in? %>
	<div class="container">
		<div class="row">
			<div class="col-md-9">
				<h2 class="micropost">Quoi de neuf ?</h2>
				<%= render 'shared/micropost_form' %>
			</div> 
			<div class="col-md-3">     
				<%= render 'shared/user_info' %>
				<%= render 'shared/stats' %>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<%= render 'shared/feed' %>
			</div> 
		</div>
	</div>    
</div>
<% else %>
<h2>Sample App</h2>
<p>
	C'est la page d'accueil de l'Application Exemple du
	<a href="http://railstutorial.org/">Tutoriel Ruby on Rails</a>.
	<%= link_to "S'inscrire", signup_path,:class => "signup_button round" %>

</p>
<% end %>
</div>